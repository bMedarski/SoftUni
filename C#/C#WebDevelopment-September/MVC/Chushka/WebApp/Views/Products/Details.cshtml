@using WebApp.Utilities
@model WebApp.ViewModels.Products.ProductDetailsViewModel

@{
	ViewBag.Title = "Product Details";
	Layout = "_Layout";
}

<main class="mt-3 mb-5">
	<h1 class="text-center">@Model.Name</h1>
	<hr class="hr-2 bg-dark"/>
	<div class="half-width mx-auto d-flex justify-content-between">
		<h3 class="text-center">Type: @Model.Type</h3>
		<h3 class="text-center">Price: $@Model.Price</h3>
	</div>
	<hr class="hr-2 bg-dark"/>
	<h3 class="text-center">Description</h3>
	<div>
		<p class="text-center mt-4">
			@Model.Description
		</p>
	</div>
	<hr class="hr-2 bg-dark"/>
	<h3 class="text-center">Actions</h3>
	<div class="mt-4 half-width mx-auto d-flex justify-content-around">
		<a class="btn chushka-bg-color" asp-controller="Products" asp-action="Order" asp-route-id="@Model.Id">Order</a>
		@if (User.IsInRole(GlobalConstants.AdminRoleText))
		{
			<a class="btn chushka-bg-color" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
			<a class="btn chushka-bg-color" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
		}
	</div>
</main>